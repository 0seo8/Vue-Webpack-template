{
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:vue/vue3-recommended"
    ],
    "rules": {
      "semi": ["error", "never"],
      "quotes": ["error", "single"],
      "eol-last": ["error", "always"],
  
      "vue/html-closing-bracket-newline": ["error", {
        "singleline": "never",
        "multiline": "never"
      }],
      "vue/html-self-closing": ["error", {
        "html": {
          "void": "always",
          "normal": "never",//일반적인 태그
          "component": "always"
        },
        "svg": "always",
        "math": "always"
      }],
      "vue/comment-directive": "off"
    }
  }
  